<div class="page-header d-flex justify-between align-center">
  <div>
    <h1 class="page-title">Categories</h1>
    <p>Manage your inventory categories</p>
  </div>
  <a href="/categories/create" class="btn btn-success">Create Category</a>
</div>

<% if (categories.length === 0) { %>
<div class="card">
  <div class="text-center">
    <h3>No categories found</h3>
    <p>Get started by creating your first category.</p>
    <a href="/categories/create" class="btn btn-primary">Create Category</a>
  </div>
</div>
<% } else { %>
<div class="grid grid-3">
  <% categories.forEach(category => { %>
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= category.name %></h3>
    </div>
    <p><%= category.description || 'No description' %></p>
    <p><strong>Items:</strong> <%= category.item_count %></p>
    <p>
      <small
        >Created: <%= new Date(category.created_at).toLocaleDateString()
        %></small
      >
    </p>
    <div class="actions mt-3">
      <a href="/categories/<%= category.id %>" class="btn btn-primary btn-sm"
        >View</a
      >
      <a
        href="/categories/<%= category.id %>/update"
        class="btn btn-warning btn-sm"
        >Edit</a
      >
      <form
        method="POST"
        action="/categories/<%= category.id %>/delete"
        style="display: inline"
        onsubmit="return confirm('Are you sure you want to delete this category?')"
      >
        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
      </form>
    </div>
  </div>
  <% }); %>
</div>
<% } %>
